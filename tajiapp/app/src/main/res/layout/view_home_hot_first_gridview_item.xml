<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_hot_page_first_gridview_imgview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/bgcolor_loading_pic"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/home_hot_first_is_video"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_media_video_btn" />

    <View
        android:id="@+id/home_hot_page_first_gridview_imgview_press"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/press_bg"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/home_hot_first_temp_layoutbottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_hot_gridview_text_height"
        android:layout_below="@id/home_hot_page_first_gridview_imgview">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   " />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/temp_layouttop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_hot_gridview_text_height"
        android:layout_alignBottom="@id/home_hot_page_first_gridview_imgview"
        android:background="#88000000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  " />
    </LinearLayout>

    <ImageView
        android:id="@+id/home_hot_page_gridview_circle_img"
        android:layout_width="@dimen/home_hot_gridview_text_height_twice"
        android:layout_height="@dimen/home_hot_gridview_text_height_twice"
        android:layout_alignTop="@id/temp_layouttop"
        android:padding="3dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/home_hot_page_gridview_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_hot_gridview_text_height"
        android:layout_alignBottom="@id/home_hot_page_first_gridview_imgview"
        android:layout_toRightOf="@id/home_hot_page_gridview_circle_img"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="第一次画彩铅"
        android:textColor="#E3E1E1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/home_hot_page_gridview_favor"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_hot_gridview_text_height"
        android:layout_below="@id/home_hot_page_first_gridview_imgview"
        android:layout_toRightOf="@id/home_hot_page_gridview_circle_img"
        android:gravity="center_vertical"
        android:text="❤"
        android:textColor="#847593" />

</RelativeLayout>