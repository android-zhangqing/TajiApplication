<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1DEE6"
    android:orientation="vertical"
    tools:context="com.zhangqing.taji.activities.SkillSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/bgcolor_bar_first"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/topbar_height"
            android:layout_height="@dimen/topbar_height"
            android:background="@drawable/press_bg"
            android:onClick="onClickBtnFinish"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="center"
            android:src="@drawable/icon_tab_publish_backstep" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择标签"
            android:textColor="@color/textcolor_bar_first_unselect"
            android:textSize="@dimen/textsize_bar_first" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.zhangqing.taji.view.NoScrollGridView
            android:id="@+id/skill_setting_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.zhangqing.taji.view.NoScrollGridView>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corners_button"
        android:text="下一步"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/textsize_bar_first" />


</LinearLayout>
