<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#402F52"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#362239" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_hot_then_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/home_hot_then_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#A766B1"
            android:textSize="@dimen/textsize_bar_first" />

        <TextView
            android:id="@+id/home_hot_then_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_hot_btn_concern_bg"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="+ 订阅"
            android:textColor="#16FBCC" />

    </LinearLayout>

    <com.zhangqing.taji.view.ComplicatedMediaView
        android:id="@+id/home_hot_then_media"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">


    </com.zhangqing.taji.view.ComplicatedMediaView>

    <TextView
        android:id="@+id/home_hot_then_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginTop="10dp"
        android:text="就是喜欢这样淡淡的水彩！"
        android:textColor="@color/textcolor_normal_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_hot_then_label_parent"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@drawable/lable_bg"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#422E54" />

        <TextView
            android:id="@+id/home_hot_then_label_child"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="#885195" />

        <TextView
            android:id="@+id/home_hot_then_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="删除"
            android:textColor="@android:color/holo_purple" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:scaleType="fitXY"
        android:src="@drawable/icon_tab_home_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#402F53"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_hot_then_count_forward_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/press_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_tab_home_hot_zhuanfa"

                />

            <TextView
                android:id="@+id/home_hot_then_count_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="86"
                android:textColor="@color/textcolor_normal_white"
                android:textSize="@dimen/textsize_bar_first"

                />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"

            android:scaleType="fitXY"
            android:src="@drawable/icon_tab_home_divider" />

        <LinearLayout
            android:id="@+id/home_hot_then_count_comment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/press_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_tab_home_hot_comment"

                />

            <TextView
                android:id="@+id/home_hot_then_count_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="86"
                android:textColor="@color/textcolor_normal_white"
                android:textSize="@dimen/textsize_bar_first"

                />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_tab_home_divider" />

        <LinearLayout
            android:id="@+id/home_hot_then_count_like_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/press_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/home_hot_then_like_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_tab_home_hot_favor" />

            <TextView
                android:id="@+id/home_hot_then_count_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="86"
                android:textColor="@color/textcolor_normal_white"
                android:textSize="@dimen/textsize_bar_first"

                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#362239" />

</LinearLayout>