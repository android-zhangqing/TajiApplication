<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#402D52"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zan_list_item_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/zan_list_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="name" />

        <TextView
            android:id="@+id/zan_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/zan_list_item_event_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#B5ADBB"
        android:text="赞了这条动态" />

    <LinearLayout
        android:id="@+id/zan_list_item_container_dongtai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/press_bg_unnormal"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zan_list_item_cover"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zan_list_item_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:text="图书" />

            <TextView
                android:id="@+id/zan_list_item_content"
                android:layout_width="match_parent"
                android:textColor="#B5ADBB"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>